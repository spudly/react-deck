{
  "name": "react-deck",
  "version": "1.0.1",
  "description": "Render a deck of cards with react",
  "main": "lib/Deck.js",
  "scripts": {
    "test": "nyc --require babel-register mocha -u exports",
    "build": "babel src --out-dir lib",
    "build:demo": "browserify -t [ babelify --presets [ es2015 react stage-0 ] ] demo/demo.js > demo/demo_build.js",
    "prepublish": "npm run build",
    "lint": "standard src && standard test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spudly/react-deck.git"
  },
  "keywords": [
    "react",
    "component",
    "deck",
    "cards"
  ],
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spudly/react-deck/issues"
  },
  "babel": {
    "presets": [
      "es2015",
      "react",
      "stage-0"
    ]
  },
  "dependencies": {
    "classnames": "^2.1.2",
    "react-card": "^2.0.0"
  },
  "devDependencies": {
    "assert-diff": "^1.0.1",
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.11.1",
    "babel-preset-stage-0": "^6.5.0",
    "babelify": "^7.3.0",
    "browserify": "^13.0.1",
    "chai": "^3.0.0",
    "mocha": "^2.2.5",
    "nyc": "^6.6.1",
    "react": "^15.2.1",
    "react-dom": "^15.2.1",
    "sinon": "^1.15.4",
    "standard": "^7.1.2"
  },
  "peerDependencies": {
    "react": "^15.2.1"
  }
}
