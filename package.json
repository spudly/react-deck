{
  "name": "react-deck",
  "version": "1.0.0",
  "description": "Render a deck of cards with react",
  "main": "lib/Deck.js",
  "scripts": {
    "test": "istanbul cover node_modules/.bin/_mocha -- -u exports --compilers js:babel/register,jsx:babel/register",
    "build": "babel src --out-dir lib",
    "build:demo": "browserify demo/demo.jsx > demo/demo.js --extension=.js --extension=.jsx",
    "prepublish": "npm run build",
    "lint": "standard src && standard test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/spudly/react-deck.git"
  },
  "keywords": [
    "react",
    "component",
    "deck",
    "cards"
  ],
  "browserify": {
    "transform": [
      "babelify"
    ]
  },
  "author": "Stephen Sorensen <shuoink@gmail.com> (http://www.stephenjohnsorensen.com/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spudly/react-deck/issues"
  },
  "homepage": "https://github.com/spudly/react-deck#readme",
  "dependencies": {
    "classnames": "^2.1.2",
    "react": "^0.13.3",
    "react-card": "^1.0.0"
  },
  "devDependencies": {
    "assert-diff": "^1.0.1",
    "babel": "^5.6.14",
    "babelify": "^6.1.2",
    "browserify": "^10.2.4",
    "chai": "^3.0.0",
    "istanbul": "^0.3.17",
    "mocha": "^2.2.5",
    "react": "^0.13.3",
    "sinon": "^1.15.4",
    "standard": "^4.5.1"
  },
  "peerDependencies": {
    "react": ">=0.13.3"
  }
}
